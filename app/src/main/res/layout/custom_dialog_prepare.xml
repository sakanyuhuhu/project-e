<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDrugName"
            android:text=" Drug Name"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkHold"
                android:text="Hold"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/txtStatusHold"
                android:clickable="true"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <!--android:focusableInTouchMode="true"-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdb1"
                    android:checked="true"
                    android:text="ไม่ระบุสาเหตุตามหัวข้อข้างล่าง"
                    android:layout_width="220dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rdb2"
                    android:text="NPO"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rdb3"
                    android:text="ไม่มียา"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rdb4"
                    android:text="ห้องยาส่งยาผิด"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rdb5"
                    android:text="ยาตก/แตก"
                    android:layout_width="1500dp"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rdb6"
                    android:text="ผู้ป่วยไปทำหัตการ"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp">
                <EditText
                    android:background="@color/colorWhite"
                    android:id="@+id/txtStatus"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:scrollbars="vertical"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>