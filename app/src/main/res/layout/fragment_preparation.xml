<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/tvTimer"
            android:layout_weight="1"
            android:text="Time"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/tvPreparation"
            android:layout_weight="1"
            android:text="PREPARATION"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/tvDoublecheck"
            android:layout_weight="1"
            android:text="DOUBLECHECK"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tvAdministration"
            android:layout_weight="1"
            android:text="ADMINISTRATION"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvUserName"
            android:text="Prepare by null null"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvPatientAdapter"
        android:layout_weight="100"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#f46e6e" />
        <Button
            android:id="@+id/btnSave"
            android:text="Save"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#4cbf6d" />
    </LinearLayout>

</LinearLayout>