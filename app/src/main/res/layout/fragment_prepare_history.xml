    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/tvTimer"
            android:text="Time"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/tvPreparation"
            android:layout_weight="1"
            android:text="PREPARATION"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack" />
        <TextView
            android:id="@+id/tvHistory"
            android:layout_weight="1"
            android:text="HISTORY"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <th.ac.mahidol.rama.emam.view.BuildHeaderPatientDataView
        android:id="@+id/headerPatientAdapter"
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/colorBlue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/tvDrugAdr"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text=" การแพ้ยา: "
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/tvDate"
            android:textSize="22sp"
            android:gravity="center"
            android:text="Calendar"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <ListView
        android:id="@+id/lvPrepareForPatientAdapter"
        android:padding="5dp"
        android:layout_weight="100"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>