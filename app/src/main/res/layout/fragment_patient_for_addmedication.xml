<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTime"
            android:text="เพิ่มรายการยา"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <th.ac.mahidol.rama.emam.view.history.BuildHistoryHeaderPatientDataView
        android:id="@+id/headerPatientAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:padding="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="Drug :"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/edtDrugName"
                android:hint="จำเป็น"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="Drug ID :"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/edtDrugID"
                android:hint="ไม่จำเป็น"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <TextView
                android:text="Route :"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="30dp" />
            <Spinner
                android:id="@+id/spinnerRoute"
                android:entries="@array/select_arraysroute"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="Dosage :"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/edtDosage"
                android:hint="จำเป็น"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <TextView
                android:text="Unit :"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/edtUnit"
                android:hint="จำเป็น"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="Frequency :"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/edtFrequency"
                android:hint="ไม่จำเป็น"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <TextView
                android:text="Route :"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="30dp" />
            <EditText
                android:id="@+id/edtMedthod"
                android:hint="ไม่จำเป็น"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="Admin Time :"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="30dp" />
            <th.ac.mahidol.rama.emam.manager.AdminTimeSelectionSpinner
                android:id="@+id/adminTimeSpinner"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/colorGray">
            </th.ac.mahidol.rama.emam.manager.AdminTimeSelectionSpinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:text="End date : "
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tvDate"
                android:padding="5dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="00/00/0000"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorLemonChiffon"/>
            <ImageView
                android:id="@+id/imgCalendar"
                android:background="@color/colorLemonChiffon"
                android:layout_gravity="center|center_horizontal"
                android:src="@drawable/calendar"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnCancel"
            android:background="@color/colorBlack"
            android:layout_gravity="center"
            android:text="ยกเลิก"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/btnAdd"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="เพิ่ม"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>


</LinearLayout>