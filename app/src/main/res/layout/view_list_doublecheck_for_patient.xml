<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDrugName"
            android:text="Drug Name"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:src="@drawable/drugs"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="7">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDosage"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text=" Dosage : 1.0"
                        android:textSize="20sp"
                        android:layout_width="150dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:id="@+id/tvType"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Type : Continue"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvRoute"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Route : PO"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/tvFrequency"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Frequency:OD"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/tvSite"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Site : "
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!--<LinearLayout-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:layout_weight="1">-->
                    <CheckBox
                        android:id="@+id/chkCheckDrug"
                        android:layout_weight="5"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="50dp" />
                    <!--<TextView-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="เตรียมยาสมบูรณ์"-->
                        <!--android:textSize="12sp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="0dp" />-->
                <!--</LinearLayout>-->
                <ImageView
                    android:layout_weight="1"
                    android:src="@android:drawable/status_bar_item_background"
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/imgvNote"
                    android:layout_weight="1"
                    android:src="@drawable/note"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>