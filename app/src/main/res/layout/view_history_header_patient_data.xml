<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBlue">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ramamahidol_hospital"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvBedNo"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text=" เลขที่เตียง/ห้อง: "
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPatientName"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Patient Name"
                    android:textSize="18sp"
                    android:layout_width="250dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tvPatientID"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="1234567890123"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMrn"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" HN:"
                    android:textSize="18sp"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tvSex"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="เพศ:ชาย"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvBirth"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" วันเกิด:30-07-1983"
                    android:textSize="18sp"
                    android:layout_width="250dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tvAge"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="อายุ:"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="250dp"
                    android:layout_height="22dp" />
                <TextView
                    android:id="@+id/tvStatus"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="สถานะภาพ:โสด"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>