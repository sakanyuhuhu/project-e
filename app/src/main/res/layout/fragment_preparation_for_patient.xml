<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tvTimer"
            android:text="Time"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" />
        <TextView
            android:layout_weight="1"
            android:text="PREPARATION"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" />
        <TextView
            android:layout_weight="1"
            android:text="HISTORY"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="เพิ่มความช่วยเหลือ"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_weight="1"
                android:text=" | "
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ramamahidol_hospital"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="10">
            <TextView
                android:id="@+id/tvBedNo"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text=" เลขที่เตียง/ห้อง: "
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPatientName"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Patient Name"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tvPatientID"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="1234567890123"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMrn"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" HN:"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tvSex"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="เพศ:ชาย"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvBirth"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" วันเกิด:30-07-1983"
                    android:textSize="16sp"
                    android:layout_width="200dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tvAge"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="อายุ:31ปี,8เดือน,2วัน"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="200dp"
                    android:layout_height="22dp" />
                <TextView
                    android:id="@+id/tvStatus"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="สถานะภาพ:โสด"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tvDrugAllergy"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text=" การแพ้ยา: "
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tvDate"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:text="Date time"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_weight="2"
            android:entries="@array/select_arrays"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvPrepareForPatientAdapter"
        android:layout_weight="100"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancel"
            android:text="ยกเลิก"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_floating_material_dark" />
        <Button
            android:id="@+id/btnSave"
            android:text="บันทึก"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/accent_material_light" />
    </LinearLayout>

</LinearLayout>