<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDrugName"
            android:text="Drug Name"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="90dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="8">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDosage"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text=" Dosage : 1.0"
                        android:layout_width="150dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:id="@+id/tvType"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Type : Continue"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvRoute"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Route : PO"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/tvFrequency"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Frequency:OD"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/tvSite"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=" Site : "
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/chkCheckDrug"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:layout_weight="1"
                    android:src="@android:drawable/status_bar_item_background"
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/imgvNote"
                    android:layout_weight="1"
                    android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>