<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:text="EMAM"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite" />
        <TextView
            android:id="@+id/tvPreparation"
            android:text="FIRST CHECK"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite" />
        <TextView
            android:id="@+id/tvDoublecheck"
            android:text="DOUBLE CHECK"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/tvAdministration"
            android:text="ADMINISTRATION"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/tvCurrentMed"
            android:text="CURRENT MED"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
    <th.ac.mahidol.rama.emam.view.history.BuildHistoryHeaderPatientDataView
        android:id="@+id/headerPatientAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Spinner
            android:id="@+id/spinner1"
            android:layout_weight="2"
            android:entries="@array/select_arrayscurrentmed"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvCurrentMed"
        android:padding="5dp"
        android:layout_weight="100"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>